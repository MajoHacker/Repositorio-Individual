<%- include('includes/head.ejs', {username: username}) %>
<div class="container">
    <br>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="title text-center"><% if(registrar) { %>Bienvenido<% } else { %>Hola de nuevo<% } %></h1>
            <% if (error) { %> 
                <div class="notification is-danger">
                    <strong><%= error %></strong>
                </div>
            <% } %>
            <form action="/users/<% if(registrar) { %>signup<% } else { %>login<% } %>" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <label class="label" for="username">Nombre de usuario</label>
                    <input name="username" id="username" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label class="label" for="password">Contrase√±a</label>
                    <input name="password" id="password" type="password" class="form-control">
                </div>
                <br>
                <input class="btn btn-outline-success btn-block" type="submit" value="<% if(registrar) { %>Registrarse<% } else { %>Entrar<% } %>">
            </form>
            <br>
        </div>
    </div>
</div>
<%- include('includes/foot.ejs') %>